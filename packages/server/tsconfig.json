{
  "compilerOptions": {
    "strict": true,
    "lib": ["es5", "es6", "esnext", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
